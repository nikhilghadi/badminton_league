<h1> Batminton League Dashboard </h1>
<%= link_to "Players", players_path%>
<%= link_to "Matches", matches_path%>

<h2> Leader Board </h2>
<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Matches Played</th>
      <th>Wins</th>
      <th>Losses</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each_with_index do |player, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= player.name %></td>
        <td><%= player.wins_count + player.losses_count %></td>
        <td><%= player.wins_count %></td>
        <td><%= player.losses_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>